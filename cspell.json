{
    "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
    "version": "0.2",
    "dictionaryDefinitions": [
        {
            "name": "project-words",
            "path": "./project-words.txt",
            "addWords": true
        }
    ],
    "dictionaries": [
        "project-words"
    ],
    "ignorePaths": [
        /**/
        "cspell.json",
        "spelling-errors.txt",
        "project-words.txt",
    ]
}

// Listing files
// cspell "**" --no-issues

// Saving errors
// cspell "**" > "spelling-errors.txt"

// Ensuring no issues are found
// cspell --words-only --unique "**" >> project-words.txt